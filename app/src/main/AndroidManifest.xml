<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.solarlearning.kyle.solarsystemeducationalapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.solarlearning.kyle.solarsystemeducationalapp.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.solarlearning.kyle.solarsystemeducationalapp.HighScoresActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.solarlearning.kyle.solarsystemeducationalapp.GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.solarlearning.kyle.solarsystemeducationalapp.GameOver"
            android:parentActivityName="com.solarlearning.kyle.solarsystemeducationalapp.GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.solarlearning.kyle.solarsystemeducationalapp.SettingsActivity"
            android:parentActivityName="com.solarlearning.kyle.solarsystemeducationalapp.GameActivity"
            android:screenOrientation="landscape" />

        <activity android:name="com.solarlearning.kyle.solarsystemeducationalapp.HowToPlay"
            android:parentActivityName="com.solarlearning.kyle.solarsystemeducationalapp.MainActivity" />
    </application>

</manifest>